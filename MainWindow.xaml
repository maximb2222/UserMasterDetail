<Window x:Class="UserMasterDetail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserMasterDetail"
        mc:Ignorable="d"
        Title="User Management" Height="450" Width="800">
    <Window.DataContext>
        <local:UserViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Master (список пользователей) -->
        <DockPanel Grid.Column="0" Margin="5">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Добавить" Command="{Binding AddUserCommand}" Margin="0,0,5,0" Padding="10,2"/>
                <Button Content="Удалить" Command="{Binding DeleteUserCommand}" Padding="10,2"/>
            </StackPanel>

            <ListView ItemsSource="{Binding Users}" 
                      SelectedItem="{Binding SelectedUser}"
                      DisplayMemberPath="Name"
                      Margin="0,5,0,0"/>
        </DockPanel>

        <!-- Detail (детали пользователя) -->
        <ScrollViewer Grid.Column="1" Margin="5">
            <Grid IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding SelectedUser.Name, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding SelectedUser.Email, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Возраст:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding SelectedUser.Age, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="2" Grid.Column="1" Margin="5"/>

                <TextBlock Text="Отдел:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox Text="{Binding SelectedUser.Department, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="3" Grid.Column="1" Margin="5"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>